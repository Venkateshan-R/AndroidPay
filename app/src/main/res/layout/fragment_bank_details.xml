<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.BankDetailsFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/left_gudiline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent=".05"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_gudiline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent=".95"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_balance_title"
        style="@style/text_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/balance"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/iv_close"
        app:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_balance_value"
        style="@style/text_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="40000000000000"
        android:textColor="@color/blue"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_balance_title"
        app:textAllCaps="true" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name_title"
        style="@style/text_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/full_name"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_balance_value"
        app:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name_value"
        style="@style/text_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Venkateshan R"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_name_title"
        app:textAllCaps="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_accountno_title"
        style="@style/text_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/account_number"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_name_value"
        app:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_accountno_value"
        style="@style/text_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12345678901"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_accountno_title"
        app:textAllCaps="true" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_ifsc_title"
        style="@style/text_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/ifsc_code"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_accountno_value"
        app:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_ifsc_value"
        style="@style/text_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="IFSC1234"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_ifsc_title"
        app:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bankname_title"
        style="@style/text_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/bank_name"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_ifsc_value"
        app:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_bankname_value"
        style="@style/text_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Indian bank"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_bankname_title"
        app:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_upi_title"
        style="@style/text_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/upi"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_bankname_value"
        app:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_upi_value"
        style="@style/text_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="venkateshan@upi"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_upi_title"
        app:textAllCaps="false" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_pin_title"
        style="@style/text_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/pin"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_upi_value"
        app:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_pin_value"
        style="@style/text_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1234@upi"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/left_gudiline"
        app:layout_constraintTop_toBottomOf="@id/tv_pin_title"
        app:textAllCaps="false" />


</androidx.constraintlayout.widget.ConstraintLayout>